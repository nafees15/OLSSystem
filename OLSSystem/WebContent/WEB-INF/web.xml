<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="2.4"
	xmlns="http://java.sun.com/xml/ns/j2ee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
	<display-name>OLSSystem</display-name>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.htm</welcome-file>
		<welcome-file>default.jsp</welcome-file>
	</welcome-file-list>	
	 
	 
	 <!--- Login-Logout-->
	 <servlet>
    <servlet-name>LoginAction</servlet-name>
    <servlet-class>com.ols.action.LoginAction</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginAction</servlet-name>
    <url-pattern>/loginaction</url-pattern>
  </servlet-mapping>
   <servlet>
    <servlet-name>Logout</servlet-name>
    <servlet-class>com.ols.action.LogoutAction</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Logout</servlet-name>
    <url-pattern>/logoutaction</url-pattern>
  </servlet-mapping>
  <!-- Add course  -->
    <servlet>
   <servlet-name>AddCourseAction</servlet-name>
    <servlet-class>com.ols.action.AddCourseAction</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AddCourseAction</servlet-name>
    <url-pattern>/addCourseAction</url-pattern>
  </servlet-mapping>
  <!-- Edit Course- -->
  <servlet>
   <servlet-name>EditCourseAction</servlet-name>
    <servlet-class>com.ols.action.EditCourseAction</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>EditCourseAction</servlet-name>
    <url-pattern>/editCourse</url-pattern>
  </servlet-mapping>
  
</web-app>